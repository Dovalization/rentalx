          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "example": {
        "name": "Category name",
        "description": "Category description"
      }
    },
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "example": {
        "name": "Specification name",
        "description": "Specification description"
      }
    }
  }
